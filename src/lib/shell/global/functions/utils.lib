#!/bin/bash

function msg_header() {
    printf "$(tput setaf 38)→ %s$(tput sgr0)\n" "$1"
}

function msg_finish() {
    printf "$(tput setaf 76)✔ %s$(tput sgr0)\n" "$1"
}

function msg_warning() {
    printf "$(tput setaf 3)⚠ %s$(tput sgr0)\n" "$@"
}

function msg_error() {
    printf "$(tput setaf 1)✖ %s$(tput sgr0)\n" "$@"
}

function msg_li() {
    printf "$(tput setaf 3)* %s$(tput sgr0)\n" "$@"
}


